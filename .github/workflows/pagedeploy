image: python:3.9-slim

before_script:
  - apt-get update && apt-get install -y git
  - pip install -r requirements.txt

pages:
  stage: deploy
  script:
    - mkdocs build --site-dir public
    - mv public/* .public
  artifacts:
    paths:
      - .public
    expire_in: 30 days
  only:
    - $CI_COMMIT_BRANCH == $CI_DEFAULT_BRANCH
